<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_wdf">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:background="@drawable/woshape">

    </ImageView>

    <ImageView
        android:id="@+id/image_tou"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@mipmap/touxiang_wdf" />

    <TextView
        android:id="@+id/text_ncheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_tou"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:text="昵称"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:layout_below="@id/text_ncheng"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@drawable/text_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_grzl"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@mipmap/grzl_wdf" />

            <TextView
                android:id="@+id/text_grzl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/text_shape"
                android:text="个人资料"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_wdqz"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@mipmap/wdqz_wdf" />

            <TextView
                android:id="@+id/text_wsqz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/text_shape"
                android:text="我的圈子"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_zj"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@mipmap/zj_wdf" />

            <TextView
                android:id="@+id/text_zj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/text_shape"
                android:text="我的足迹"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_wdqb"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@mipmap/wdqb_wdf" />

            <TextView
                android:id="@+id/text_wdqb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/text_shape"
                android:text="我的钱包"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_shdz"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@mipmap/shdz_wdf" />

            <TextView
                android:id="@+id/text_shdz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/text_shape"
                android:text="我的收货地址"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>