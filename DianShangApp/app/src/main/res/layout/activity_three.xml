<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_background"
    tools:context=".ThreeActivity">

    <LinearLayout
        android:id="@+id/layout_edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_180"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phone_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@null"
            android:drawableLeft="@mipmap/login_icon_phone"
            android:drawablePadding="@dimen/dp_10"
            android:hint="手机号"
            android:paddingLeft="@dimen/dp_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#ffffff" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_edit1"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <EditText
            android:id="@+id/yanzheng_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@null"
            android:drawableLeft="@mipmap/register_icon_verification"
            android:drawablePadding="@dimen/dp_10"
            android:hint="输入密码"
            android:paddingLeft="@dimen/dp_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_below="@id/yanzheng_edit"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_yan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_edit2"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mm_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@null"
            android:drawableLeft="@mipmap/login_icon_lock"
            android:drawableRight="@mipmap/login_icon_eye"
            android:drawablePadding="@dimen/dp_10"
            android:hint="确认登录密码  "
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#ffffff" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_denglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_yan"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="right"
        android:text="已有账户?立即登录"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_zhuce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_denglu"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/button_shape"
        android:text="注册" />
</RelativeLayout>