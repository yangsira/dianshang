<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_background"
    tools:context=".TowActivity">

    <LinearLayout
        android:id="@+id/layout_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_160"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@null"
            android:drawableLeft="@mipmap/login_icon_phone"
            android:drawablePadding="@dimen/dp_10"
            android:hint="手机号"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#ffffff" />

        <EditText
            android:id="@+id/edit_passd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@null"
            android:drawableLeft="@mipmap/login_icon_lock"
            android:drawablePadding="@dimen/dp_10"
            android:hint="密码"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#ffffff" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_edit">

        <CheckBox
            android:id="@+id/tow_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:buttonTint="#ffffff"
            android:text="记住密码"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/text_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_30"
            android:text="快速注册"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_denglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_edit2"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/button_shape"
        android:text="登录" />
</RelativeLayout>